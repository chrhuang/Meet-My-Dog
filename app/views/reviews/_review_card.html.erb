<div class="review-card">
  <%= cl_image_tag review.user.photo.key, class: "avatar-md my-4" %>
  <h3><%= review.user.nickname %></h3>
  <div class="d-flex mb-4">
    <% review.rating.times do |i| %>
      <%= cl_image_tag "star_fill_lnb439", height: 20, width: 20, crop: :fill, class: "me-1" %>
    <% end %>
    <% (5 - review.rating).times do |i| %>
      <%= cl_image_tag "star_jibq15", height: 20, width: 20, crop: :fill, class: "me-1" %>
    <% end %>
  </div>
  <p class="review-card__content"><%= review.content %></p>
</div>
