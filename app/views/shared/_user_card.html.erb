<div class="event-card">
  <div class="event-card-body">
    <div class="event-card__img">
      <%= cl_image_tag user.photo.key, width: 200, height: 200, class: "user-img" %>
    </div>
    <div class="event-card__content">
      <span class="event-card__code"></span>
      <div class="event-card__title">
        <h3><%= user.nickname %></h3>
      </div>
      <div class="event-card__text">
        <p class="mb-0" style="opacity: 0.5;"><%= user.description %></p>
      </div>
      <div class="event-card__text mt-2">
        <% user.dogs.each do |dog| %>
         <a class="dog-query" href=""data-bs-toggle="modal" data-bs-target="#dogCardModal" data-dog-id="<%= dog.id%>" data-dog-name="<%= dog.name%>" data-dog-age="<%= dog.age %>" data-dog-size="<%= dog.size %>" data-dog-gender="<%= dog.gender%>" data-dog-photo-key="<%= dog.photo.key%>"> <%= cl_image_tag dog.photo.key, class: "avatar-dog me-2" %></a>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render '/shared/dog_card_modal' %>
