<div class="event-card">
  <div class="event-card-body">
    <div class="event-card__img">
      <%= cl_image_tag user.photo.key, width: 200, height: 200 %>
    </div>
    <div class="event-card__content">
      <span class="event-card__code"></span>
      <div class="event-card__title"><%= user.nickname %></div>
      <div class="event-card__text"><%= user.description %></div>
      <div class="event-card__text"> Meet My Dogs: </div>
      <a href="#" class="event-card__button"><%= user.dogs[0].photo.key %></a>
    </div>
  </div>
</div>
