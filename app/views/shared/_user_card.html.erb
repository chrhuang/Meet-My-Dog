<div class="event-card">
  <div class="event-card-body">
    <div class="event-card__img">
      <%= cl_image_tag user.photo.key, width: 200, height: 200, class: "user-img", crop: :fill %>
    </div>
    <div class="event-card__content">
      <span class="event-card__code"></span>
      <div class="event-card__title">
        <h3><%= user.nickname %></h3>
      </div>
      <div class="event-card__text">
        <p class="mb-0" style="opacity: 0.5;"><%= user.description %></p>
      </div>
      <div class="event-card__text mt-2">
        <% user.dogs.each do |dog| %>
          <a class="dog-query" href=""data-bs-toggle="modal" data-bs-target="<%= "#dogCardModal_#{dog.id}" %>"><%= cl_image_tag dog.photo.key, class: "avatar-dog me-2" %></a>
          <%= render '/shared/dog_card_modal', dog: dog %>
        <% end %>
      </div>
    </div>
  </div>
</div>
