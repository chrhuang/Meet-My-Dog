<div class="row p-3 shadow-sm align-items-center mb-4">
  <div class="col-4">
    <h4 class="mb-0"><%= event.name %></h4>
  </div>
  <div class="col-3">
    <h5 class="mb-0"><%= event.date %></h5>
  </div>
  <div class="col-2">
    <h5 class="mb-0">Toutous: <%= event.dogs_count %>/<%= event.max_dog %></h5>
  </div>
  <div class="col-3">
    <% if user_signed_in? %>
      <%= link_to "Page du groupe", event_path(event), class: "btn btn-flat"%>
    <% else %>
      <button class="btn btn-flat" aria-current="page" data-bs-toggle="modal" data-bs-target="#loginModal" href="#">Page du groupe</button>
    <% end %>
  </div>
</div>
