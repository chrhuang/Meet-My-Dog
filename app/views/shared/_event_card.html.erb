<div class="row p-3 shadow-sm align-items-center mb-4">
  <div class="col-5">
    <h4 class="mb-0"><%= event.name %></h4>
    <p class="mb-0" style="opacity: 0.5;"><%= event.walk.site.name %> - <%= event.walk.name %></p>
  </div>
  <div class="col-2">
    <h5 class="mb-0">Le <%= l(event.date, format: '%d/%m/%Y') %></h5>
  </div>
  <!--  <div class="col-2">
    <h5 class="mb-0">chiens: <%= event.dogs_count %>/<%= event.max_dog %></h5>
  </div> -->
  <div class="col-5">
    <% if user_signed_in? %>
      <div class="d-flex justify-content-end">
        <%= link_to "Page du groupe", event_path(event), class: "btn btn-group"%>
        <% unless show %>
          <button class="btn btn-flat ms-3" aria-current="page" data-bs-toggle="modal" data-bs-target="<%= "#modal_event_#{event.id}" %>" href="#">Laisser un avis</button>
          <%= render "reviews/review_modal", event: event %>
        <% end %>
      </div>
    <% else %>
      <button class="btn btn-flat" aria-current="page" data-bs-toggle="modal" data-bs-target="#loginModal" href="#">Page du groupe</button>
      <% unless show %>
        <button class="btn btn-flat" aria-current="page" data-bs-toggle="modal" data-bs-target="#loginModal" href="#">Laisser un avis</button>
      <% end %>
    <% end %>
  </div>
</div>
