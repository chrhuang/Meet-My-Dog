<%# MODAL CREATE ALONE EVENT %>
<div class="modal fade" id="createEventAloneModal" tabindex="-1" aria-labelledby="createEventAloneModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Faire la balade seul</h5>
        <a type="button" class="text-green" data-bs-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></a>
      </div>
      <div class="modal-body">
        <%= simple_form_for :event, url: events_path, method: :post do |f| %>
          <div class="form-inputs">
            <%= f.input :name, as: :hidden, input_html: { value: "Balade seul" } %>
            <%= f.input :description, as: :hidden %>
            <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :max_dog, as: :hidden, input_html: {value: 0} %>
            <%= f.input :group, as: :hidden, input_html: { value: false } %>
            <%= f.input :walk_id, as: :hidden, input_html: { class: "walk-alone" } %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit, "Faire cette balade seul", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
