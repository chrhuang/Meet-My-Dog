<div class="modal fade" id="updateEventModal" tabindex="-1" aria-labelledby="updateEventModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateEventModal">Modifier cet événement</h5>
        <a type="button" class="text-green" data-bs-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></a>
      </div>
      <div class="modal-body">
        <%= simple_form_for :event, url: events_path, method: :post do |f| %>
          <div class="form-inputs">
            <%= f.input :name, label: 'Nom de votre événement:', required: true %>
            <%= f.input :description, label: 'Description:', required: true %>
            <%= f.input :max_dog,label: 'Nombre de chien présents au maximum', required: true %>
            <%= f.input :walk_id, as: :hidden %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit, "Modifier cet événement", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
