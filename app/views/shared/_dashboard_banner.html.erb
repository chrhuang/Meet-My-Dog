<div class="dashboard-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.setaswall.com/wp-content/uploads/2017/09/Park-Wallpaper-36-1920x1080.jpg);">
  <% current_user.dogs.each do |dog| %>
    <div class="dog-avatar">
      <% if dog&.photo.present? %>
        <%= cl_image_tag(dog.photo.key, :transformation=>[{:height=>300, :width=>300, :crop=>"fill"}], class: "avatar-XL") %>
      <% else %>
        <%= cl_image_tag("dog_avatar_wzjl2a", :transformation=>[{:height=>300, :width=>300, :crop=>"fill"}], class: "avatar-XL") %>
      <% end %>
      <div class="dog-links">
        <%= render "pages/edit_dog_button", dog: dog %>
        <%= render "pages/dog_modal_form", dog: dog %>
        <%= link_to dog_path(dog), method: :delete, class: "dog-link" do %>
          <i class="fas fa-times-circle"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
