<div class="accordion-item shadow-sm rounded mb-4">
  <h2 class="accordion-header" id="heading-<%= id %>">
    <button class="accordion-button collapsed ps-0 pt-0 pb-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= id %>" aria-expanded="true" aria-controls="collapse-<%= id %>">
      <%= cl_image_tag img, crop: :fill, class: "me-3 walk-photo" %>
      <div class="d-flex flex-column justify-content-center">
        <h3 class="walk-title"><%= walk.name %></h3>
        <div class="walk-description">
          <p class="mb-0"><%= description %>
          </p>
        </div>
      </div>
      <div class="d-flex align-items-center mx-4 walk-infos">
        <p class="text-nowrap mb-0 mx-2">3 km</p>
        <p class="mb-0 site-bar">|</p>
        <p class="text-nowrap mb-0 mx-2">3 balades</p>
      </div>
    </button>
  </h2>
  <div id="collapse-<%= id %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= id %>" data-bs-parent="#accordionExample">
    <div class="accordion-body">
      <div class="container">
        <% walk.events.each do |event| %>
          <%= render '/shared/event_card', event: event %>
        <% end %>
      </div>
      <p class="mb-0 text-danger">ATTENTION IL FAUT CHANGER LES COULEURS DES BOUTONS</p>
      <div class="w-100 d-flex justify-content-between p-4">
        <button class="btn btn-flat">Cr√©er un evenement</button>
        <button class="btn btn-flat">Faire la balade seul</button>
      </div>
    </div>
  </div>
</div>
