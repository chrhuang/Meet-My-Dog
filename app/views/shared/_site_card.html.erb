<%= link_to site_path(site.id), class: "site-card-link" do %>
  <div class="site-card">
    <div class="site-card__img" style="background-image: url('<%= cl_image_path site.photos[0].key, height: 300, crop: :fill %>');"></div>
    <div class="d-flex justify-content-between">
      <div class="d-flex flex-column">
        <h5 class="title"><%= site.name %></h5>
        <p class="city"><%= site.city %></p>
      </div>
      <div class="d-flex site-card__icons">
        <div class="d-flex me-2">
          <p class="m-0 me-1 walks"><%= site.walks.count %></p>
          <%= cl_image_tag "walk_tjrcyj", height: 20, width: 20, crop: :fill %>
        </div>
        <% 4.times do |i| %>
          <%= cl_image_tag "star_fill_lnb439", height: 20, width: 20, crop: :fill %>
        <% end %>
        <% (5 - 4).times do |i| %>
          <%= cl_image_tag "star_jibq15", height: 20, width: 20, crop: :fill %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
