<%= link_to site_path(site.id), class: "site-card-link" do %>
  <div class="site-card">
    <div class="site-card__img" style="background-image: url('<%= cl_image_path site.photos[0].key, height: 300, crop: :fill %>');"></div>
    <div class="d-flex justify-content-between">
      <div class="d-flex flex-column">
        <h5 class="title"><%= site.name %></h5>
        <p class="city"><%= site.city %></p>
      </div>
      <div class="d-flex site-card__icons">
        <% 4.times do |i| %>               <!-- Etoile pleine -->
          <i style="font-size: 20px;" class="fas fa-star text-green"></i>
        <% end %>
        <% (5 - 4).times do |i| %>        <!-- Etoile vide -->
          <i style="font-size: 20px;" class="far fa-star text-green"></i>
        <% end %>
        <i style="font-size: 20px;" class="fas fa-star-half-alt text-green"></i>        <!-- Etoile semi pleine -->
      </div>
    </div>
  </div>
<% end %>
