<%# MODAL CREATE DOG %>
<div class="modal fade" id="addDogModal" tabindex="-1" aria-labelledby="addDogModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addDogModalLabel">Ajouter mon chien</h5>
        <a type="button" class="text-green" data-bs-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></a>
      </div>
      <div class="modal-body">
        <%= simple_form_for :dog, url: dogs_path, method: :post do |f| %>
          <div class="form-inputs">
            <%= f.input :name, required: true %>
            <%= f.input :age, required: true %>
            <%= f.input :size, required: true %>
            <%= f.input :photo, as: :file %>
            <%= f.input :gender %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit, "Ajouter mon chien", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
